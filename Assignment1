#include <iostream>
using namespace std;

class car{
public:

int release_year;
string customer;
int speed;

public:
void printinfo(void);
int accelarate(int);
int brake(int);

};

void car :: printinfo(){
    cout<<"relyear=";
    cout<<release_year<<endl;
    cout<<"customer=";
    cout<<customer<<endl;
    cout<<"speed=";
    cout<<speed<<endl;
    };
int car :: accelarate(int speed){
    for(int i=0;i<5;i++)
    {
        speed=speed+10;
    }
    cout<<"the speed is:"<<speed<<endl;
}

int car :: brake(int speed){
    for(int i=0;i<5;i++)
    {
        if(speed>0){
        speed=speed-10;}
    }
    cout<<"the speed is:"<<speed<<endl;
}

int main() {

    car a;
    a.release_year=2019;
    a.customer = "toyota";
    a.speed= 40;

    a.printinfo();
    a.accelarate(a.speed);
    a.brake(a.speed);

}
